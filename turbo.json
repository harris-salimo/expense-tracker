{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
      "build": {
        "outputs": ["dist/**", "public/build/**"]
      },
      "format": {
        "dependsOn": ["^format"]
      },
      "lint": {
        "dependsOn": ["^lint"]
      },
      "test": {
        "dependsOn": ["^test"]
      },
      "dev": {
        "persistent": true,
        "cache": false
      }
    }
  }